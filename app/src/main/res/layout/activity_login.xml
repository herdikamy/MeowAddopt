<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login">

    <ImageView
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cat"
        />

    <ImageView
        android:id="@+id/paw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cat"
        android:layout_marginTop="10dp"
        android:background="@drawable/animal_paw_print_3"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnlogingoogle"
        android:layout_below="@id/paw"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFFFFF"
        android:text="Sign in with google"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:drawableLeft="@drawable/ic_baseline_g_mobiledata_24"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orwith"
        android:layout_below="@id/btnlogingoogle"
        android:text="or login with"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/emaillogintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orwith"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="20dp"
        android:hint="email"
        android:padding="20dp"
        android:textColor="#CCCACA"
        android:textColorHint="#CCCACA" />

    <EditText
        android:id="@+id/passwordlogintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emaillogintext"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_baseline_password_24"
        android:drawablePadding="20dp"
        android:hint="password"
        android:padding="20dp"
        android:textColor="#CCCACA"
        android:textColorHint="#CCCACA" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginbtn"
        android:layout_below="@id/passwordlogintext"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"

        android:backgroundTint="#B22727"
        android:text="SIGN IN"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        />

    <TextView
        android:id="@+id/toRegisterPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Haven't account?"
        android:textColor="#B22727"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"/>

</RelativeLayout>